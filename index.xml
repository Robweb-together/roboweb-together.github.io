               /robot/%E7%9B%BE%E6%9E%84%E6%9C%BA%E8%87%AA%E5%8A%A8%E6%8D%A2%E5%88%80%E6%9C%BA%E5%99%A8%E4%BA%BA/image3_huf4d07b1a5766a0508e235b3f4262863b_1107346_557a5a28df5c1f515c437e7af7a1a09a.webp 400w,
               /robot/%E7%9B%BE%E6%9E%84%E6%9C%BA%E8%87%AA%E5%8A%A8%E6%8D%A2%E5%88%80%E6%9C%BA%E5%99%A8%E4%BA%BA/image3_huf4d07b1a5766a0508e235b3f4262863b_1107346_5d94f9610e480da000c97e45df85a726.webp 760w,
               /robot/%E7%9B%BE%E6%9E%84%E6%9C%BA%E8%87%AA%E5%8A%A8%E6%8D%A2%E5%88%80%E6%9C%BA%E5%99%A8%E4%BA%BA/image3_huf4d07b1a5766a0508e235b3f4262863b_1107346_1200x1200_fit_q75_h2_lanczos_3.webp 1200w&#34;
               src=&#34;https://robweb-together.github.io/robot/%E7%9B%BE%E6%9E%84%E6%9C%BA%E8%87%AA%E5%8A%A8%E6%8D%A2%E5%88%80%E6%9C%BA%E5%99%A8%E4%BA%BA/image3_huf4d07b1a5766a0508e235b3f4262863b_1107346_557a5a28df5c1f515c437e7af7a1a09a.webp&#34;
               width=&#34;760&#34;
